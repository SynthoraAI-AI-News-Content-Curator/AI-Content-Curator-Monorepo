{
  "name": "ai-article-content-curator",
  "description": "AI Article Content Curator - A web application that curates and summarizes articles using AI.",
  "version": "1.1.0",
  "private": false,
  "workspaces": [
    "frontend",
    "backend",
    "crawler"
  ],
  "bin": {
    "aicc": "./bin/aicc.js"
  },
  "author": "Son Nguyen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoangsonww/AI-Gov-Content-Curator.git"
  },
  "bugs": {
    "url": "https://github.com/hoangsonww/AI-Gov-Content-Curator/issues"
  },
  "keywords": [
    "AI",
    "Article",
    "Content",
    "Curator",
    "Web",
    "Web Application",
    "Application",
    "Summarization",
    "Crawler",
    "Web Scraping",
    "Generative AI",
    "Natural Language Processing",
    "Machine Learning",
    "Node.js",
    "React",
    "Express",
    "MongoDB",
    "Tailwind CSS",
    "Next.js",
    "Chromium",
    "Puppeteer",
    "Axios",
    "Cheerio",
    "Nodemailer",
    "Swagger",
    "OpenAPI",
    "Documentation",
    "API"
  ],
  "scripts": {
    "dev": "npm run dev:frontend & npm run dev:backend & npm run dev:crawler",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:crawler": "npm run dev --workspace=crawler",
    "dev:newsletters": "npm run dev --workspace=newsletters",
    "build": "npm run build:frontend && npm run build:backend && npm run build:crawler",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:crawler": "npm run build --workspace=crawler",
    "build:newsletters": "npm run build --workspace=newsletters",
    "start": "npm run start:frontend & npm run start:backend & npm run start:crawler",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "start:crawler": "npm run start --workspace=crawler",
    "start:newsletters": "npm run start --workspace=newsletters",
    "test": "npm run test --workspaces --if-present",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "test:crawler": "npm run test --workspace=crawler",
    "test:newsletters": "npm run test --workspace=newsletters",
    "test:e2e": "npm run test:e2e --workspace=frontend",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "lint": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md,html}\" && eslint . --ext .ts,.tsx,.js,.jsx --fix || true",
    "lint:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md,html}\" && eslint . --ext .ts,.tsx,.js,.jsx || true",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,scss,md,html}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,scss,md,html}\"",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "typecheck:frontend": "npm run typecheck --workspace=frontend",
    "typecheck:backend": "npm run typecheck --workspace=backend",
    "typecheck:crawler": "npm run typecheck --workspace=crawler",
    "clean": "bash scripts/clean.sh",
    "setup": "bash scripts/setup.sh",
    "check": "bash scripts/check.sh",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:logs": "docker-compose logs -f",
    "prepare": "command -v husky >/dev/null 2>&1 && husky install || true",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@sparticuz/chromium": "^133.0.0",
    "@vercel/node": "^5.1.16",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "lucide-react": "^0.477.0",
    "mongoose": "^6.13.8",
    "next": "15.2.1",
    "nodemailer": "^7.0.3",
    "prettier": "^3.5.3",
    "puppeteer-core": "^24.4.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "react-slick": "^0.30.3",
    "serve-favicon": "^2.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcrypt": "^5.0.2",
    "@types/cheerio": "^0.22.30",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-slick": "^0.23.13",
    "@types/serve-favicon": "^2.5.7",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": "18.x"
  }
}
